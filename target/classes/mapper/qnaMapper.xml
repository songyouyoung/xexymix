<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xexymix.app.dao.qnaMapper">
    <!--//////////////////////////////////////////////////////-->
    <!--///////////////////// 상세페이지 //////////////////////-->
    <!--/////////////////////////////////////////////////////-->
    <!-- 전체 문의 개수-->
    <select id="selectQnaCnt" parameterType="String" resultType="int">
        select count(qnaNo)
            from qna
                where itemNo = #{itemNo}
    </select>
    <!-- 문의 리스트 조회 -->
    <select id="selectQna" parameterType="String" resultType="qnaDto">
        select qnaNo, userNo, userName, qnaTxt, qnaRegDate, qnaFile
            from qna
                where itemNo = #{itemNo}
        limit ${limit}, 10
    </select>
</mapper>